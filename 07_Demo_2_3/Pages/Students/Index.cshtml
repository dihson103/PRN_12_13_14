@page
@model _07_Demo_2_3.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div>
    Filter by name: 
    <input id="searchInput" value="@Model.searchValue" />
    <button class="btn btn-primary" onclick="handleSearch()">Search</button>
    | <a href="https://localhost:7187/Students">View full list</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].LastName)
            </th>
            <th> 
                @Html.DisplayNameFor(model => model.Student[0].FirstName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StudentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StudentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<script>
    const handleSearch = () => {
        var searchValue = document.getElementById('searchInput').value;
        window.location = 'https://localhost:7187/Students?name=' + searchValue;
    }
</script>

